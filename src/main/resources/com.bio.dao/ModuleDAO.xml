<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bio.dao.ModuleDAO">

    <sql id="baseParam">
        m.id,
        m.name as module_name,
        p.id as project_id,
        p.name as project_name,
        u.id as user_id,
        u.name as user_name
    </sql>

    <sql id="baseJoin">
        FROM modules m
        JOIN projects p ON m.project_id = p.id
        JOIN users u ON p.user_id = u.id
    </sql>


    <select id="getList" resultMap="moduleMap">
        SELECT
        <include refid="baseParam"/>
        <include refid="baseJoin"/>
        WHERE p.id = #{projectId}
        AND m.deleted_at is null
    </select>

    <select id="getById" resultMap="moduleMap">
        SELECT
        <include refid="baseParam"/>
        <include refid="baseJoin"/>
        WHERE m.id = #{id}
        AND m.deleted_at is null
    </select>

    <insert id="add" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO modules(name,project_id) VALUES (#{name},#{projectId})
    </insert>

    <update id="update">
        UPDATE modules SET
        name = #{name},
        updated_at = now()
        WHERE id = #{id}
    </update>

    <delete id="delete">
        UPDATE modules SET
        deleted_at = now()
        WHERE id = #{id}
    </delete>

    <resultMap id="moduleMap" type="Module">
        <id property="id" column="id"/>
        <result property="name" column="module_name"/>
        <association property="project" resultMap="projectMap"/>
    </resultMap>

    <resultMap id="projectMap" type="Project">
        <id property="id" column="id"/>
        <result property="name" column="project_name"/>
        <association property="user" resultMap="userMap"/>
    </resultMap>

    <resultMap id="userMap" type="User">
        <id property="id" column="user_id"/>
        <result property="name" column="user_name"/>
    </resultMap>

</mapper>


